<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">ecomhouse_productvariants_group_form.group_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="EcomHouse\ProductVariants\Block\Adminhtml\Group\Edit\BackButton"/>
			<button name="delete" class="EcomHouse\ProductVariants\Block\Adminhtml\Group\Edit\DeleteButton"/>
			<button name="save" class="EcomHouse\ProductVariants\Block\Adminhtml\Group\Edit\SaveButton"/>
			<button name="save_and_continue" class="EcomHouse\ProductVariants\Block\Adminhtml\Group\Edit\SaveAndContinueButton"/>
		</buttons>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
		<namespace>ecomhouse_productvariants_group_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>ecomhouse_productvariants_group_form.group_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="group_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="group_form_data_source" class="EcomHouse\ProductVariants\Model\Group\DataProvider">
			<settings>
				<requestFieldName>group_id</requestFieldName>
				<primaryFieldName>group_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
    <htmlContent name="product_variants_edit_tab_view_product_content">
        <block class="EcomHouse\ProductVariants\Block\Adminhtml\Group\Edit\Tab\ProductTab" name="product_variants_edit_tab_product" template="EcomHouse_ProductVariants::tab/product.phtml">
            <block class="EcomHouse\ProductVariants\Block\Adminhtml\Group\Edit\Tab\Product" name="product_variants_edit_tab_product_grid" />
            <arguments>
                <argument name="sort_order" xsi:type="number">100</argument>
                <argument name="tab_label" xsi:type="string" translate="true">Select products</argument>
            </arguments>
            <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="product_variants_edit_tab_product_grid_serializer">
                <arguments>
                    <argument name="grid_block" xsi:type="string">product_variants_edit_tab_product_grid</argument>
                    <argument name="callback" xsi:type="string">_getSelectedProducts</argument>
                    <argument name="input_element_name" xsi:type="string">product[list]</argument>
                    <argument name="reload_param_name" xsi:type="string">in_products</argument>
                </arguments>
            </block>
            <block name="product_variants_grid_script_js" template="EcomHouse_ProductVariants::tab/product-js.phtml"/>
        </block>
    </htmlContent>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="group_name" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Group</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Group name</label>
				<dataScope>group_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
        <field name="status" formElement="select" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Group</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Yesno"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="attributes_ids">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">EcomHouse\ProductVariants\Model\Source\Attributes</item>
                <item name="config" xsi:type="array">
                    <item name="additionalClasses" xsi:type="string">required</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Attributes</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="dataScope" xsi:type="string">attributes_ids</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="listens" xsi:type="array">
                        <item name="${ $.namespace }.${ $.namespace }:responseData" xsi:type="string">setParsed</item>
                    </item>
                </item>
            </argument>
        </field>
	</fieldset>
</form>
